{
  "manifest_version": 2,
  "name": "Bandcamp Downloader",
  "version": "0.1.0",
  "description": "Download music via bandcamp. Please consider giving money to artists : http://bandcamp.com/help/audio_basics#steal",
  //<div>Icons made by <a href="http://www.freepik.com" title="Freepik">Freepik</a> from <a href="http://www.flaticon.com" title="Flaticon">www.flaticon.com</a> is licensed by <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0" target="_blank">CC 3.0 BY</a></div>
  "icons": {
      "16": "icons/16.png",
      "24": "icons/24.png",
      "32": "icons/32.png",
      "128": "icons/128.png"
  },
  "page_action": {
    "default_title": "Bandcamp Downloader"
  },
  //uses https://stuk.github.io/jszip/ v3.1.3
  //uses https://github.com/eligrey/FileSaver.js v1.3.3
  "background": {
    "scripts": ["js/dist/FileSaver.min.js", "js/dist/jszip.min.js", "js/component.js", "js/background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["*://*.bandcamp.com/*"],
    "js": ["js/content.js"]
  }],
  "permissions": [
    "webNavigation",  "tabs", "notifications", "*://*.bcbits.com/*"
  ],
  "update_url": "http://path/to/updateInfo.xml"
}